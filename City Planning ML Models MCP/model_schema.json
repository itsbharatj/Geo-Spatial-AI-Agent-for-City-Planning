                "items": {"type": "array", "items": [{"type": "string"}, {"type": "number"}, {"type": "number"}, {"type": "number"}]}
            },
            "weather_conditions": {
                "type": "object",
                "properties": {
                    "temperature": {"type": "number"},
                    "precipitation": {"type": "number"},
                    "visibility": {"type": "number"}
                }
            },
            "events": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "type": {"type": "string"},
                        "location": {"type": "string"},
                        "time": {"type": "string"}
                    },
                    "required": ["type", "location", "time"]
                }
            },
            "prediction_horizon": {"type": "integer", "default": 1}
        },
        "required": ["historical_traffic"],
        "additionalProperties": False
    },

